<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ad.nerdsqu.cookhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CookTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".MyAccountActivity" />
        <activity android:name=".HelpLoginActivity"/>
        <activity android:name=".UserAreaActivity" />
        <activity android:name=".SavedRecipesActivity" />
        <activity android:name=".SearchRecipeActivity" />
        <activity
            android:name=".AddRecipeActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".RecipeActivity"/>
        <activity android:name=".ViewDirectionsActivity"/>
    </application>

</manifest>