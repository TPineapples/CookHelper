<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ad.nerdsqu.cookhelper">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CookTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".MyAccountActivity" />
        <activity android:name=".HelpLoginActivity" />
        <activity android:name=".UserAreaActivity" />
        <activity android:name=".RecipeListActivity" />
        <activity
            android:name=".SearchRecipeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AddRecipeActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".RecipeActivity" />
        <activity android:name=".ViewDirectionsActivity" />
        <activity
            android:name=".EnterTextActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".RecipeManageActivity" />
        <activity android:name=".IngredientListActivity"></activity>
    </application>

</manifest>